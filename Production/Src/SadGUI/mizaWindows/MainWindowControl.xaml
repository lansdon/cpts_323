<UserControl x:Class="SadGUI.mizaWindows.MainWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:SadGUI"
             xmlns:MyWindows="clr-namespace:SadGUI.mizaWindows"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!--Main Grid Definition-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/><!--Row 1-->
            <RowDefinition Height="50*"/> <!--Row 2-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/><!--Column 1-->
            <ColumnDefinition Width="70*"/><!--Column 2-->
        </Grid.ColumnDefinitions>
        
        <!--Video Window Panel Place Holder-->
        <MyWindows:CameraUserControl
            Grid.Row="0"
            Grid.Column="0"
            DataContext="{Binding TargetsViewModel}"/>

        <!--Launcher Control Panel-->
        <MyWindows:LauncherUsercontrolWithButtons
            Grid.Row="1"
            Grid.Column="0"
            />

        <!--DataContext="{Binding LauncherViewModel}"-->

        <!--User CheckBox Control Panel-->
        <MyWindows:CheckBoxUserControls
            Grid.Row="1"
            Grid.Column="1"/>

        <!--Target Information Panel-->
        <!--<MyWindows:TargetUserControl
            Grid.Row="0"
            Grid.Column="1"/>-->
        
        <StackPanel x:Name="BottomLeft" Grid.Row="0" Grid.Column="1" IsEnabled="False"/>

    </Grid>
</UserControl>
