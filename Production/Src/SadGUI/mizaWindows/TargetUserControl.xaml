<UserControl x:Class="SadGUI.mizaWindows.TargetUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding Name}" Grid.Column="0" VerticalAlignment="Center"/>
        <Label Content="{Binding Alive}" Grid.Column="1" VerticalAlignment="Center"/>
        <Label Content="{Binding Points}" Grid.Column="2" VerticalAlignment="Center"/>
        <Label Content="{Binding Friend}" Grid.Column="3" VerticalAlignment="Center"/>
        <Label Content="{Binding CordsToString}" Grid.Column="4" VerticalAlignment="Center"/>
        <Label Content="{Binding FlashRate}" Grid.Column="5" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
